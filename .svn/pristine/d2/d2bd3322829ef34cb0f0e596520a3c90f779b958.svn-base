.actionBox{
	font-size: 13px;
	line-height: 14px;
    background: #fff;
    background-size: 100%;
    height: 30px;
    width: 200px;
    border:1px solid rgb(220,220,220);
    padding: 15px 10px;
}
.upLayer{
 	/* height: 30px; */
    width: 100%;
    position: absolute;
    bottom: 6px;
    /* margin-top: 15px; */
    /* border-bottom: 1px solid rgb(180,180,180); */
}
.action{
	display: inline-block;
}
.action span{
	margin-left: 19px;
}
.upMove{
	background: url(../../images/mipmap-xhdpi/Move.png) no-repeat;
	margin-left: 6px;
}
.upMove:hover{
	cursor: pointer;
	background: url(../../images/mipmap-xhdpi/Move_click.png) no-repeat;
	color:rgb(245,96,76);
}
.downMove{
	background: url(../../images/mipmap-xhdpi/moves_down.png) no-repeat;
	margin-left: 10px;
}
.downMove:hover{
	cursor: pointer;
	background: url(../../images/mipmap-xhdpi/moves_down_click.png) no-repeat;
	color:rgb(245,96,76);
}
.deleteBox{
	background: url(../../images/mipmap-xhdpi/del.png) no-repeat;
	margin-left: 10px;
}
.deleteBox:hover{
	cursor: pointer;
	background: url(../../images/mipmap-xhdpi/del_click.png) no-repeat;
	color:rgb(245,96,76);
}
.downLayer{
    width: 100%;
	height: 30px;
	margin-top: 15px;
}
.cut{
	background: url(../../images/mipmap-xhdpi/cut.png) no-repeat;
}
.cut:hover{
	cursor: pointer;
	background: url(../../images/mipmap-xhdpi/cut_click.png) no-repeat;
	color:rgb(245,96,76);
}
.copy{
	background: url(../../images/mipmap-xhdpi/copy.png) no-repeat;
}
.copy:hover{
	cursor: pointer;
	background: url(../../images/mipmap-xhdpi/copy_click.png) no-repeat;
	color:rgb(245,96,76);
}
.paste{
	background: url(../../images/mipmap-xhdpi/glued.png) no-repeat;
}
.paste:hover{
	cursor: pointer;
	background: url(../../images/mipmap-xhdpi/glued_click.png) no-repeat;
	color:rgb(245,96,76);
}
.abFont{
	height: 30px;
	border-bottom: 1px solid rgb(180,180,180);
}
.abFontFam{
	display: inline-block;
	width:90px;
	margin-left: 6px;
	height: 30px;
}
.abFontFam_click{
	width: 90px;
	height: 22px;
	border: 1px solid #333a4d;
}
.abFontSize{
	display: inline-block;
	width: 56px;
	margin-left: 10px;
}
.abFontSize_click{
	width: 56px;
	height: 22px;
	border: 1px solid #333a4d;
}

.abFontFam_click>span:first-child{
	display: inline-block;
	width: 72px;
	height: 21px;
	border: 1px solid #333a4d;
	font-size: 10px;
	line-height: 21px;
	text-align: center;
}
.abFontSize_click>span:first-child{
	display: inline-block;
	width: 38px;
	height: 21px;
	border: 1px solid #333a4d;
	font-size: 10px;
	line-height: 21px;
	text-align: center;
}
.selectabFontFam{
	width: 90px;
	height: 100px;
	border: 1px solid #333a4d;
	background: #fff;
	position: absolute;
	overflow-x: hidden;
	display: none;
}

.selectabFontFam li{
	width: 72px;
	height: 20px;
	font-size: 10px;
	text-align: center;
}
.selectabFontFam li:hover{
	cursor: pointer;
	width: 72px;
	height: 20px;
	background: #d6d6d6;
	font-size: 10px;
	text-align: center;
}
.abFontFamOptions li.abFontFamActive{
	cursor: pointer;
	width: 72px;
	height: 20px;
	background: #d6d6d6;
	font-size: 10px;
	text-align: center;
}

.selectabFontSize{
	width: 56px;
	height: 100px;
	border: 1px solid #333a4d;
	background: #fff;
	position: absolute;
	overflow-x: hidden;
	display: none;
}

.selectabFontSize li{
	width: 38px;
	height: 20px;
	font-size: 10px;
	text-align: center;
}
.selectabFontSize li:hover{
	cursor: pointer;
	width: 38px;
	height: 20px;
	background: #d6d6d6;
	font-size: 10px;
	text-align: center;
}
